<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InfoQrFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_info_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/margin_info_qr"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/image_info_qr"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/title_info_qr"
        android:layout_margin="@dimen/margin_info_qr"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/state_info_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_info_qr"
        android:layout_margin="@dimen/margin_info_qr"
        android:textSize="@dimen/size_label_qr"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/description_info_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/state_info_qr"
        android:layout_margin="@dimen/margin_info_qr"
        android:textSize="@dimen/size_label_qr"/>




</androidx.constraintlayout.widget.ConstraintLayout>